{% extends 'base.html.twig' %}

{% block title %}
    Jugadores
{% endblock title %}
{% block body %}
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Listado de Jugadores</h3>
        </div>
        <div class="box-body">
            <table class="table table-bordered table-striped data-table">
                <thead>
                <tr>
                    <th>Club</th>
                    <th>Nº Identificación</th>
                    <th>Jugador</th>
                    <th>Fecha de Nacimiento</th>
                    <th>Posición</th>
                    <th>Fecha de Registro</th>
                    <th>Acciones</th>
                </tr>
                </thead>
                <tbody>
                {% for jugador in jugadors %}
                    <tr>
                        <td>{{ jugador.clubJugador.first.club }}</td>
                        <td>{{ jugador.persona.numeroIdentificacion }}</td>
                        <td>
                            <a href="{{ path('jugador_show', { 'id': jugador.id }) }}">
                            {{ jugador.persona.nombre }} {{ jugador.persona.apellido }}
                            </a>
                        </td>
                        <td>{{ jugador.persona.fechaNacimiento | date ('d/m/Y') }}</td>
                        <td>{{ jugador.posicionHabitual }}</td>
                        <td>{% if jugador.fechaCreacion %}{{ jugador.fechaCreacion|date('d/m/Y H:i:s') }}{% endif %}</td>
                        <td>
                            <a class="btn btn-default" href="{{ path('jugador_show', { 'id': jugador.id }) }}">
                                <i class="fa fa-eye"></i>
                            </a>
                            {#<a class="btn btn-default" href="{{ path('jugador_edit', { 'id': jugador.id }) }}">#}
                                {#<i class="fa fa-edit"></i>#}
                            {#</a>#}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="navigation">
            {{ knp_pagination_render(jugadors) }}
        </div>
    </div>

    {#<a class="btn btn-primary" href="{{ path('jugador_new') }}">Nuevo jugador</a>#}
{% endblock %}
