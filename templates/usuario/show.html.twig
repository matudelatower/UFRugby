{% extends 'base.html.twig' %}

{% block title %}Usuario #{{ usuario.id }}{% endblock %}

{% block body %}
    <h1>Usuario #{{ usuario.id }}</h1>

    <div class="row">
        <div class="col-md-4">

            <!-- Profile Image -->
            <div class="card box-primary">
                <div class="card-body box-profile">

                    <h3 class="profile-username text-center">{{ usuario.username }}</h3>

                    <ul class="list-group list-group-unbordered">
                        <li class="list-group-item">
                            <b>Email</b> <a class="float-right">{{ usuario.email }}</a>
                        </li>
                        <li class="list-group-item">
                            <b>Activo</b> <a class="float-right">
                                {% if usuario.enabled %}
                                    <small class="badge bg-success">Si</small>
                                {% else %}
                                    <small class="badge bg-danger">No</small>
                                {% endif %}
                            </a>
                        </li>
                        <li class="list-group-item">
                            <b>Ãšltimo Login</b> <a
                                    class="float-right">{{ usuario.lastLogin ? usuario.lastLogin|date('Y-m-d H:i:s') : '' }}</a>
                        </li>
                        <li class="list-group-item">
                            <b>Roles</b> <a class="float-right">{{ usuario.roles ? usuario.roles|join(', ') : '' }}</a>
                        </li>
                    </ul>


                </div>
                <div class="card-footer">
                    <a class="btn btn-primary float-right"
                       href="{{ path('usuario_edit', {'id': usuario.id}) }}">Editar</a>
                </div>
                <!-- /.box-body -->

            </div>
        </div>
    </div>
    <a class="btn btn-default" href="{{ path('usuario_index') }}">Volver</a>


{% endblock %}
