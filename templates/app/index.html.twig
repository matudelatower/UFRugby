{% extends 'base.html.twig' %}

{% block title %}
    Dashboard
{% endblock title %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/css/charts.css') }}">
{% endblock stylesheets %}
{% block body %}


    <section class="content">
        <!-- Small boxes (Stat box) -->
        <div class="row">

            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3>{{ cantidadJugadores }}</h3>

                        <p>Jugadores</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-bag"></i>
                    </div>
                    <a href="{{ path('jugador_index') }}" class="small-box-footer">Mas info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>

            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-aqua">
                    <div class="inner">
                        <h3>{{ cantidadCompetitivos }}</h3>

                        <p>Jugadores Competitivos</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-bag"></i>
                    </div>
                    <a href="#" class="small-box-footer">Mas info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>


            <!-- ./col -->
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3>{{ juvenilesSobreMayores }}<sup style="font-size: 20px">%</sup></h3>

                        <p>Juveniles</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-stats-bars"></i>
                    </div>
                    <a href="#" class="small-box-footer">Mas info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-yellow">
                    <div class="inner">
                        <h3>{{ nuevosFichajes }}</h3>

                        <p>Nuevos Registros</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-add"></i>
                    </div>
                    <a href="{{ path('clubjugador_index') }}" class="small-box-footer">Mas info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
        </div>

        <div class="row">
            <!-- Left col -->
            <section class="col-lg-7 connectedSortable">
                <!-- Custom tabs (Charts with tabs)-->
                <div class="nav-tabs-custom">
                    <!-- Tabs within a box -->
                    <ul class="nav nav-tabs pull-right">

                        <li class="pull-left header"><i class="fa fa-inbox"></i> Fichajes</li>
                    </ul>
                    <div class="tab-content no-padding">
                        <!-- Morris chart - Sales -->
                        <div class="chart tab-pane active" id="revenue-chart"
                             style="position: relative; height: 300px;"></div>
                        <div class="chart tab-pane" id="sales-chart" style="position: relative; height: 300px;"></div>
                    </div>
                </div>
            </section>
        </div>

    </section>



{% endblock %}
{% block javascripts %}
    <!-- Morris.js charts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
    <script src="{{ asset('build/js/charts.js') }}"></script>
    <script>
        /* Morris.js Charts */
        // Sales chart
        var area = new Morris.Area({
            element: 'revenue-chart',
            resize: true,
            // data: [
            //     {y: '2015 Q1', item1: 2666, item2: 2666},
            //     {y: '2015 Q2', item1: 2778, item2: 2294},
            //     {y: '2015 Q3', item1: 4912, item2: 1969},
            //     {y: '2015 Q4', item1: 3767, item2: 3597},
            //     {y: '2016 Q1', item1: 6810, item2: 1914},
            //     {y: '2016 Q2', item1: 5670, item2: 4293},
            //     {y: '2016 Q3', item1: 4820, item2: 3795},
            //     {y: '2016 Q4', item1: 15073, item2: 5967},
            //     {y: '2017 Q1', item1: 10687, item2: 4460},
            //     {y: '2017 Q2', item1: 8432, item2: 5713}
            // ],
            data: {{ jsonCompetitivos | raw}},
            xkey: 'y',
            // ykeys: ['item1', 'item2'],
            ykeys: ['competitivos', 'nocompetitivos'],
            // labels: ['Item 1', 'Item 2'],
            labels: ['Competitivos', 'No Competitivos'],
            lineColors: ['#a0d0e0', '#3c8dbc'],
            hideHover: 'auto'
        });


        //Fix for charts under tabs
        $('.box ul.nav a').on('shown.bs.tab', function () {
            area.redraw();
            donut.redraw();
            line.redraw();
        });
    </script>
{% endblock javascripts %}
