{% extends 'base.html.twig' %}

{% block title %}
    Pago Jugador
{% endblock title %}
{% block body %}
    <h1>Editar Pago jugador</h1>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Pago jugador</h3>
        </div>
        <div class="card-body">

            {{ form_start(edit_form) }}
            {{ form_widget(edit_form) }}

            <h2>Jugador:</h2>
            <h3>{{ pagoJugador.jugador }}</h3>

            <input class="btn btn-primary" type="submit" value="Guardar"/>

            {{ form_end(edit_form) }}
        </div>
    </div>

    <a class="btn btn-default" href="{{ path('pagojugador_index') }}">Volver</a>


{% endblock %}
