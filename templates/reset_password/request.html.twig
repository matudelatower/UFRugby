<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ app_name }} | Recuperar Password</title>

    {% set logoUnion = asset('uploads/images/union/logo_union.png') %}
    {% if logoUnion %}
        {# TODO cambiar cuando se instale en bolivia #}
        {% set logoUnion = asset('build/img/logo_urp.png') %}
    {% endif %}

    <link rel="icon" type="image/png" href="{{ logoUnion }}">

    {% block stylesheets %}
        {{ encore_entry_link_tags('css/login') }}
    {% endblock %}
    <style>
        .img-fluid {
            width: 7rem;
        }
    </style>
</head>
<body class="hold-transition login-page">
<div class="login-box">
    <div class="card card-outline card-primary">
        <div class="card-header text-center">
            <img class="img-fluid" src="{{ logoUnion }}" alt="logo">
        </div>
        <div class="card-body">
            <p class="login-box-msg">Recuperar contraseña</p>
            {% for flashError in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}
            {{ form_start(requestForm) }}
            <div class="input-group mb-3">
                {{ form_widget(requestForm.email) }}
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <button type="submit" class="btn btn-primary btn-block">Restablecer contraseña</button>
                </div>
                <!-- /.col -->
            </div>
            {{ form_end(requestForm) }}
            <p class="mt-3 mb-1">
                <a href="{{ path('app_login') }}">Volver al Inicio</a>
            </p>
        </div>
        <!-- /.login-card-body -->
    </div>
</div>
<!-- /.login-box -->


{% block javascripts %}
    {{ encore_entry_script_tags('login') }}
{% endblock %}
</body>
</html>
