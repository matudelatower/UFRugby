{% extends 'base.html.twig' %}

{% block title %}Torneos{% endblock %}

{% block body %}


    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Listado de Torneos</h3>
                </div>
                <div class="box-body">
                    <table class="table table-bordered table-striped data-table">
                        <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Organizador</th>
                            <th>División</th>
                            <th>Sexo</th>
                            <th>Máx Titulares Por Equipo</th>
                            <th>Máx Suplentes Por Equipo</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for torneo in torneos %}
                            <tr>
                                <td>
                                    <a href="{{ path('torneo_show', {'id': torneo.id}) }}">
                                        {{ torneo.nombre }}
                                    </a>
                                </td>
                                <td>
                                    {% if torneo.clubOrganizador %}
                                        {{ torneo.clubOrganizador }}
                                    {% else %}
                                        URP
                                    {% endif %}
                                </td>
                                <td>{{ torneo.division }}</td>
                                <td>{{ torneo.sexo | capitalize }}</td>
                                <td>{{ torneo.maximoTitularesPorEquipo }}</td>
                                <td>{{ torneo.maximoSuplentesPorEquipo }}</td>
                                <td>
                                    {% if torneo.activo %}
                                        <small class="label bg-green">Activo</small>
                                    {% else %}
                                        <small class="label bg-danger">Inactivo</small>
                                    {% endif %}
                                </td>
                                <td>
                                    <a class="btn btn-default" href="{{ path('torneo_show', {'id': torneo.id}) }}">
                                        <i class="fa fa-eye"></i>
                                    </a>
                                    <a class="btn btn-default" href="{{ path('torneo_edit', {'id': torneo.id}) }}">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="11">Sin resultados</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                {#<div class="navigation">#}
                {#{{ knp_pagination_render(referees) }}#}
                {#</div>#}
            </div>
        </div>
    </div>

    <a class="btn btn-primary" href="{{ path('torneo_new') }}">Crear Torneo</a>
{% endblock %}