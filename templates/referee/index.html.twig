{% extends 'base.html.twig' %}

{% block title %}
    Referees
{% endblock title %}
{% block body %}
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Listado de Referees</h3>
        </div>
        <div class="box-body">
            <table class="table table-bordered table-striped data-table">
                <thead>
                <tr>
                    <th>Nº Identificación</th>
                    <th>Referee</th>
                    <th>Fecha de Nacimiento</th>
                    <th>Fecha de Registro</th>
                    <th>Acciones</th>
                </tr>
                </thead>
                <tbody>
                {% for referee in referees %}
                    <tr>
                        <td>{{ referee.persona.numeroIdentificacion }}</td>
                        <td>{{ referee.persona.nombre }} {{ referee.persona.apellido }}</td>
                        <td>{{ referee.persona.fechaNacimiento | date ('d/m/Y') }}</td>

                        <td>{% if referee.fechaCreacion %}{{ referee.fechaCreacion|date('d/m/Y H:i:s') }}{% endif %}</td>
                        <td>
                            <a class="btn btn-default" href="{{ path('referee_show', { 'id': referee.id }) }}">
                                <i class="fa fa-eye"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="navigation">
            {{ knp_pagination_render(referees) }}
        </div>
    </div>

{% endblock %}
