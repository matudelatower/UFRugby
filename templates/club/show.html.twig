{% extends 'base.html.twig' %}


    {% block body %}
        <div class="row">
            <div class="col-md-3">

                <!-- Profile Image -->
                <div class="card card-primary card-outline">
                    <div class="card-body box-profile">
                        {% set avatar =  asset('build/img/avatar.png') %}
                        {% if club.imageName %}
                            {% set avatar = asset('uploads/images/club/'~ club.imageName) %}
                        {% endif %}
                        <div class="text-center">
                            <img class="profile-user-img img-fluid img-circle"
                                 src="{{ avatar }}"
                                 alt="User profile picture">
                        </div>

                        <h3 class="profile-username text-center">{{ club.nombre }}</h3>

                        <ul class="list-group list-group-unbordered">
                            <li class="list-group-item">
                                <b>Jugadores</b> <a class="float-right">{{ jugadores| length }}</a>
                            </li>
                            <li class="list-group-item">
                                <b>Jugadores (No Competitivos)</b> <a class="float-right">{{ jugadores| length }}</a>
                            </li>
                            {# <li class="list-group-item"> #}
                            {# <b>Altura</b> <a class="float-right">{{ jugador.altura }} Mts</a> #}
                            {# </li> #}
                            {# <li class="list-group-item"> #}
                            {# <b>Friends</b> <a class="float-right">13,287</a> #}
                            {# </li> #}
                        </ul>

                        {# <a href="#" class="btn btn-primary btn-block"><b>Follow</b></a> #}
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->

                <div class="card card-primary">
                    <div class="card-header with-border">
                        <h3 class="card-title">Datos </h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="card-body">

                        <strong><i class="fa fa-phone margin-r-5"></i> Contacto</strong>

                        <p class="text-muted">
                            <strong>Mail:</strong> {{ club.contacto.mail }}<br>
                            <strong>Tel:</strong> {{ club.contacto.telefono }}<br>
                            <strong>Tel alt:</strong> {{ club.contacto.telefonoAlternativa }}<br>
                        </p>

                        <hr>

                        <strong><i class="fa fa-map-marker margin-r-5"></i> Direcci√≥n</strong>

                        <p class="text-muted">
                            {{ club.contacto.provincia }}
                            {{ club.contacto.localidad }}
                            {{ club.contacto.direccion }}
                        </p>

                        <hr>

                    </div>
                    <!-- /.box-body -->
                </div>

            </div>
            <!-- /.col -->
            <div class="col-md-9">
                <div class="card">
                    <div class="card-header p-2">
                        <ul class="nav nav-pills">
                            <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Pagos</a></li>
                            <li class="nav-item"><a class="nav-link"href="#pases" data-toggle="tab">Historial de Pases</a></li>

                        </ul>
                    </div>
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="active tab-pane" id="activity">


                            </div>
                            <!-- /.tab-pane -->
                            <div class="tab-pane" id="pases">

                            </div>
                            <!-- The timeline -->

                        </div>
                    </div>
                    <!-- /.tab-content -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>


        <a class="btn btn-default" href="{{ path('club_index') }}">Volver</a>

        <a class="btn btn-default" href="{{ path('club_edit', { 'id': club.id }) }}">Editar</a>



    {% endblock %}
