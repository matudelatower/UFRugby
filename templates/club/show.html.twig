{% extends 'base.html.twig' %}


    {% block body %}
        <div class="row">
            <div class="col-md-3">

                <!-- Profile Image -->
                <div class="box box-primary">
                    <div class="box-body box-profile">
                        {% set avatar =  asset('build/img/avatar.png') %}
                        {% if club.imageName %}
                            {% set avatar = asset('uploads/images/club/'~ club.imageName) %}
                        {% endif %}
                        <img class="profile-user-img img-responsive img-circle" src="{{ avatar }}"
                             alt="User profile picture">

                        <h3 class="profile-username text-center">{{ club.nombre }}</h3>

                        <ul class="list-group list-group-unbordered">
                            <li class="list-group-item">
                                <b>Jugadores</b> <a class="pull-right">{{ jugadores| length }}</a>
                            </li>
                            <li class="list-group-item">
                                <b>Jugadores (No Competitivos)</b> <a class="pull-right">{{ jugadores| length }}</a>
                            </li>
                            {#<li class="list-group-item">#}
                            {#<b>Altura</b> <a class="pull-right">{{ jugador.altura }} Mts</a>#}
                            {#</li>#}
                            {#<li class="list-group-item">#}
                            {#<b>Friends</b> <a class="pull-right">13,287</a>#}
                            {#</li>#}
                        </ul>

                        {#<a href="#" class="btn btn-primary btn-block"><b>Follow</b></a>#}
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->

                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Datos </h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">

                        <strong><i class="fa fa-phone margin-r-5"></i> Contacto</strong>

                        <p class="text-muted">
                            <strong>Mail:</strong> {{ club.contacto.mail }}<br>
                            <strong>Tel:</strong> {{ club.contacto.telefono }}<br>
                            <strong>Tel alt:</strong> {{ club.contacto.telefonoAlternativa }}<br>
                        </p>

                        <hr>

                        <strong><i class="fa fa-map-marker margin-r-5"></i> Direcci√≥n</strong>

                        <p class="text-muted">
                            {{ club.contacto.provincia }}
                            {{ club.contacto.localidad }}
                            {{ club.contacto.direccion }}
                        </p>

                        <hr>

                    </div>
                    <!-- /.box-body -->
                </div>

            </div>
            <!-- /.col -->
            <div class="col-md-9">
                <div class="nav-tabs-custom">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#activity" data-toggle="tab">Pagos</a></li>
                        <li><a href="#pases" data-toggle="tab">Historial de Pases</a></li>

                    </ul>
                    <div class="tab-content">
                        <div class="active tab-pane" id="activity">


                        </div>
                        <!-- /.tab-pane -->
                        <div class="tab-pane" id="pases">

                        </div>
                        <!-- The timeline -->

                    </div>
                    <!-- /.tab-content -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>


        <a class="btn btn-default" href="{{ path('club_index') }}">Volver</a>

        <a class="btn btn-default" href="{{ path('club_edit', { 'id': club.id }) }}">Editar</a>



    {% endblock %}
