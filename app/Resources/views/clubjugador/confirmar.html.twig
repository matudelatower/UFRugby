{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-md-6">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Jugador</h3>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Nombre</label>

                        <div class="col-sm-10">
                            {{ jugador.jugador.persona.nombre }}
                            {{ jugador.jugador.persona.apellido }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Nº Identificación</label>

                        <div class="col-sm-10">
                            {{ jugador.jugador.persona.numeroIdentificacion }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Posición</label>

                        <div class="col-sm-10">
                            {{ jugador.jugador.posicionHabitual }}
                        </div>
                    </div>
                </div>

                <h3 class="box-title">Ficha Médica</h3>
                {{ form_start(form) }}
                {% if is_granted('ROLE_CLUB') %}


                    <div class="form-group">
                        <label for="matricula" class="control-label">Matrícula</label>
                        <input class="form-control" id="matricula" name="matricula" required
                               type="text">

                    </div>
                    <div class="form-group">
                        <label for="doctor" class="control-label">Doctor</label>
                        <input class="form-control" id="doctor" name="doctor" required type="text">

                    </div>

                    {{ form_widget(form.confirmadoClub) }}

                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <div class="row">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Matrícula</label>
                            <div class="col-sm-10">
                                {{ fichaMedica.matricula }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Doctor</label>
                            <div class="col-sm-10">
                                {{ fichaMedica.doctor }}
                            </div>
                        </div>
                    </div>
                    {{ form_widget(form.confirmadoUnion) }}
                {% endif %}
                <button type="submit" class="btn btn-primary">Confirmar</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
